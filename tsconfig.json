{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    // aliases for imports
    "baseUrl": "./src/",
    "paths": {
      "@/app/*": [
        "client/app/*"
      ],
      "@/pages/*": [
        "client/pages/*"
      ],
      "@/widgets/*": [
        "client/widgets/*"
      ],
      "@/features/*": [
        "client/features/*"
      ],
      "@/entities/*": [
        "client/entities/*"
      ],
      "@/shared/*": [
        "client/shared/*"
      ],
      "@/images/*": [
        "assets/images/*"
      ],
      "@/data/*": [
        "data/*"
      ],
      "@/server/*": [
        "server/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}